@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Welcome to STARMOUNT POS</h1>
    <p class="lead mt-3">A smarter way to manage sales, stock, and customers.</p>

    <div class="card mt-5 mx-auto" style="max-width: 400px;">
        <div class="card-body">
            <h5 class="card-title">Login to Continue</h5>
            <p class="card-text">
                Please log in with your account:
                <ul class="text-start">
                    <li><strong>SuperAdmin:</strong> Manage the entire system</li>
                    <li><strong>Store Owner:</strong> Oversee store operations</li>
                    <li><strong>Salesperson:</strong> Make and manage sales</li>
                </ul>
            </p>
            <a class="btn btn-primary btn-block" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    </div>
</div>
