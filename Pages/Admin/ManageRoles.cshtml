@page
@model PointOfSale.Pages.Admin.ManageRolesModel
@{
    ViewData["Title"] = "Manage User Roles";
}

<h2>Manage User Roles</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Current Roles</th>
            <th>Assign New Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <form method="post" asp-page-handler="RemoveRole" class="d-inline">
                            <input type="hidden" name="SelectedUserId" value="@user.Id" />
                            <input type="hidden" name="SelectedRole" value="@role" />
                            <span class="badge bg-secondary me-1">
                                @role
                                <button type="submit" class="btn-close btn-close-white btn-sm ms-1" title="Remove @role"></button>
                            </span>
                        </form>
                    }
                </td>

                <td colspan="2">
                    <form method="post" asp-page-handler="AssignRole" class="d-flex align-items-center">
                        <input type="hidden" name="SelectedUserId" value="@user.Id" />
                        <select name="SelectedRole" class="form-select me-2" style="width: 200px;">
                            @foreach (var role in Model.AllRoles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Assign</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
