@page
@model PointOfSale.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Users & Roles";
}

<h2>Registered Users and Their Roles</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
            </tr>
        }
    </tbody>
</table>
